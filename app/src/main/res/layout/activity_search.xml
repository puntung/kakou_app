<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >
        <ImageView 
            android:id="@+id/search_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/navigationbar_back_selector"
            android:layout_alignParentLeft="true"
            android:layout_margin="8dp"
            android:clickable="true"
            />
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查询"
            android:textSize="18sp"
            android:padding="10dp"
            android:layout_toRightOf="@id/search_back"
            />
    </RelativeLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:background="#e6e6e6" />
    <ScrollView 
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:scrollbars="none"
      android:id="@+id/regist_scroller"
      >
        <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >         
         <LinearLayout
             android:id="@+id/ly_hphm"
             android:layout_width="fill_parent"
    		 android:layout_height="wrap_content"
    		 android:orientation="horizontal"
    		 android:background="@color/white"
    		 android:clickable="true"
    		 >

             <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="right"
                android:text="@string/hphm"
            	android:layout_marginTop="10dp"
            	android:layout_marginBottom="10dp"
                android:textSize="15.0sp" />
             <EditText
                android:id="@+id/et_q_hphm"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18.0dip"
                android:gravity="left"
            	android:layout_marginTop="10dp"
            	android:hint="粤B126YV"
                android:textSize="15.0dip"
                android:background="@android:color/transparent" />
          </LinearLayout>
          <View
             android:layout_width="fill_parent"
             android:layout_height="1.0px"
             android:background="#e6e6e6" />
            <LinearLayout
             android:id="@+id/ly_hpys"
             android:layout_width="fill_parent"
       		 android:layout_height="wrap_content"
       		 android:orientation="horizontal"
       		 android:background="@color/white"
       		 android:clickable="true"
       		 >

             <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="right"
                android:text="号牌颜色"
               	android:layout_marginTop="10dp"
               	android:layout_marginBottom="10dp"
                android:textSize="15.0sp" />
               <TextView
                android:id="@+id/tv_q_hpys"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18.0dp"
                android:gravity="left"
              	android:layout_marginTop="10dp"
                android:textSize="15.0dip"
                android:text="蓝"
				android:background="@android:color/transparent"/>
          </LinearLayout>
        <View
           android:layout_width="fill_parent"
           android:layout_height="1.0px"
           android:background="#e6e6e6" />
       <Button 
             android:layout_width="fill_parent"
             android:layout_height="35dp"
             android:background="@drawable/search_btn_selector"
             android:layout_marginTop="20dp"
             android:layout_marginLeft="10dp"
             android:layout_marginRight="10dp"
             android:text="查找"
             android:textColor="@android:color/white"
             android:textSize="18sp"
             android:id="@+id/search_btn"
             android:layout_gravity="center"
             />
          </LinearLayout>
	</ScrollView>
</LinearLayout>
