<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout
        android:id="@+id/fh_navbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/subtab"
        android:focusable="true"
        android:focusableInTouchMode="true"
        >
        <TextView
            android:id="@+id/fh_place"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:text="@string/place"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_margin="8dp"
            android:textColor="@color/font_grey"
            android:background="@drawable/corners_bg"
            />
        <TextView
            android:id="@+id/fh_fxhb"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:text="@string/fxbh"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_margin="8dp"
            android:textColor="@color/font_grey"
            android:background="@drawable/corners_bg"
            />
        <TextView
            android:id="@+id/fh_hpys"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:text="@string/hpys"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_margin="8dp"
            android:textColor="@color/font_grey"
            android:background="@drawable/corners_bg"
            />
        <TextView
            android:id="@+id/fh_ppdm"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:text="@string/clpp1"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_margin="8dp"
            android:textColor="@color/font_grey"
            android:background="@drawable/corners_bg"
            />
        <TextView
            android:id="@+id/fh_st"
            android:layout_width="140dp"
            android:layout_height="35dp"
            android:text="@string/start_date"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_margin="8dp"
            android:textColor="@color/font_grey"
            android:background="@drawable/corners_bg"
            />
        <TextView
            android:id="@+id/fh_et"
            android:layout_width="140dp"
            android:layout_height="35dp"
            android:text="@string/end_date"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_margin="8dp"
            android:textColor="@color/font_grey"
            android:background="@drawable/corners_bg"
            />

        <!--<EditText-->
            <!--android:id="@+id/fh_hphm"-->
            <!--android:layout_width="140dp"-->
            <!--android:layout_height="35dp"-->
            <!--android:hint="@string/hphm"-->
            <!--android:gravity="center"-->
            <!--android:textSize="14sp"-->
            <!--android:singleLine="true"-->
            <!--android:layout_margin="8dp"-->
            <!--android:background="@drawable/corners_bg"-->
            <!--/>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right|center_horizontal"
            >
            <TextView
                android:id="@+id/fh_nav_go"
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:text="@string/ok"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/btn_blue_selector"
                android:layout_marginRight="20dp"
                android:layout_marginTop="8dp"/>

        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/tab"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="查找指定号牌"
            android:layout_margin="5dp"
            android:textSize="14sp"
            android:gravity="center"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/search_icon"/>
        <EditText
            android:id="@+id/fh_hphm"
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:hint="粤L 12345"
            android:maxLength="7"
            android:gravity="center"
            android:textSize="14sp"
            android:singleLine="true"
            android:background="@drawable/corners_bg"
            android:layout_margin="5dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            android:paddingRight="20dp"
            android:focusable="false"
            android:gravity="right">
            <ImageView
                android:id="@+id/fh_order_icon"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:src="@drawable/order_selector"/>
            <TextView
                android:id="@+id/fh_order_jcsj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="时间"
                android:gravity="center"
                android:textSize="14sp"
                android:layout_margin="5dp"
                android:clickable="true"
                android:textColor="@drawable/navigatiion_fontcolor_selector"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="|"
                android:gravity="center"
                android:textSize="14sp"
                android:layout_margin="5dp"
                />
            <TextView
                android:id="@+id/fh_order_ppdm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/clpp1"
                android:gravity="center"
                android:textSize="14sp"
                android:layout_margin="5dp"
                android:clickable="true"
                android:textColor="@drawable/navigatiion_fontcolor_selector"
                />
        </LinearLayout>

    </LinearLayout>

        <!--<ImageView-->
            <!--android:id="@+id/img_pullmore"-->
            <!--android:layout_width="200dp"-->
            <!--android:layout_height="20dp"-->
            <!--android:clickable="true"-->
            <!--android:src="@drawable/pullmore_btn_selector"/>-->


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/tab"/>

    <com.sx.kakou.tricks.PullLoadMoreRecyclerView
        android:id="@+id/pullLoadMoreRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</LinearLayout>
